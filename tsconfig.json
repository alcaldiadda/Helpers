{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "helper/*": ["./src/*"]
    },
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["index.ts", "./src"],
  "exclude": ["node_modules"]
}
